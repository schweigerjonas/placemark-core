<div class="card">
  {{#if poi.img.url}}
    <div class="card-image">
      <figure class="image is-square" style="max-height: 512px">
        <img src={{poi.img.url}} />
      </figure>
    </div>
  {{/if}}
  <div class="card-content">
    <form action="/poi/{{poi._id}}/img" method="POST" enctype="multipart/form-data">
      <div id="file-select" class="file has-name is-fullwidth">
        <label class="file-label mr-2">
          <input class="file-input" name="imageFile" type="file" name="resume" accept="image/png, image/jpeg" />
          <span class="file-cta">
            <span class="file-icon">
              <i class="fas fa-upload"></i>
            </span>
            <span class="file-label">
              Choose a fileâ€¦
            </span>
          </span>
          <span class="file-name"></span>
        </label>
        <button type="submit" class="button is-info">Upload</button>
      </div>
    </form>
    {{#if poi.img.url}}
      <a href="/poi/{{poi._id}}/img" class="button">
        <span class="icon is-small">
          <i class="fas fa-trash"></i>
        </span>
      </a>
    {{/if}}
  </div>
</div>

<script>
  const fileInput = document.querySelector(".file-input"); fileInput.onchange = () => { if (fileInput.files.length > 0) { const fileName = document.querySelector(".file-name");
  fileName.textContent = fileInput.files[0].name; } };
</script>
