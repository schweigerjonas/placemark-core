{{#each categories}}
  <div class="box box-link-hover-shadow">
    <div class="columns">
      <div class="column is-6">
        <h2 class="title">
          {{title}}
        </h2>
        <a href="/category/{{_id}}" class="button mr-1">
          <span class="icon is-small">
            <i class="fas fa-folder-open"></i>
          </span>
        </a>
        <a href="/category/{{_id}}/edit" class="button mr-1">
          <span class="icon is-small">
            <i class="fas fa-edit"></i>
          </span>
        </a>
        <a href="/dashboard/category/{{_id}}" class="button">
          <span class="icon is-small">
            <i class="fas fa-trash"></i>
          </span>
        </a>
      </div>

      <div class="column is-6">
        <figure class="image">
          {{#if img}}
            <img src={{img}} />
          {{/if}}
        </figure>
      </div>
    </div>
  </div>
{{/each}}
