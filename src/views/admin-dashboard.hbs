{{> menu active="admin-dashboard"}}

<section class="section">
  <table class="table is-fullwidth">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Role</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each users}}
        <tr>
          <td>{{firstName}}</td>
          <td>{{lastName}}</td>
          <td>{{email}}</td>
          <td>{{role}}</td>
          <td>
            <a href="/admin/dashboard/{{_id}}" class="button">
              <span class="icon is-small">
                <i class="fas fa-trash"></i>
              </span>
            </a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</section>
